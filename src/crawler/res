|term_end = [[6 Oktober]] [[1981]]
|predecessor = [[Gamal Abdel Nasser]]
|successor = [[Hosni Mubarak]]
|birth_date = {{birth date|1918|12|25}}
|birth_place = [[Mit Abu Al-Kum, Al-Minufiyah, Mesir]]
|death_place = [[Kairo]], [[Mesir]]
|death_date = {{death date and age|1981|10|6|1918|12|25}}
|spouse = [[Jehan Sadat]]
|party = [[Persatuan Arab Sosialis]] &lt;br /&gt; (hingga 1977) &lt;br /&gt; [[Partai Nasional Demokratik (Mesir)|Partai Nasional Demokratik]] &lt;br /&gt; (dari 1977)
|vicepresident = 
